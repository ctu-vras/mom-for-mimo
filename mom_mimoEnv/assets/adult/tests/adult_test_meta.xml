    </asset>
	
	<!-- Internal contacts should not have friction to reduce "getting stuck" on ourselves-->
	<contact>
		<!-- <pair geom1="a_lb" geom2="a_ub1" condim="1"/> -->
		<exclude body1="left_eye" body2="a_upper_body"/>
		<exclude body1="right_eye" body2="a_upper_body"/>
		<exclude body1="a_right_upper_leg" body2="a_lower_body"/>
		<exclude body1="a_left_upper_leg" body2="a_lower_body"/>
		<!-- <exclude body1="a_right_upper_leg" body2="a_body"/>
		<exclude body1="a_left_upper_leg" body2="a_body"/>
		<exclude body1="a_upper_body" body2="a_body"/>
		<exclude body1="a_lower_body" body2="a_body"/>
		<exclude body1="a_body" body2="a_body"/> -->

	</contact>
	
	<tendon>
		<fixed class="a_mimo" name="a_hip_bend" limited="true" range="-.01 .01">
			<joint joint="robot:a_hip_bend1" coef="1"/>
			<joint joint="robot:a_hip_bend2" coef="-1"/>
		</fixed>
		<fixed class="a_mimo" name="a_hip_rotation" limited="true" range="-.01 .01">
			<joint joint="robot:a_hip_rot1" coef="1"/>
			<joint joint="robot:a_hip_rot2" coef="-1"/>
		</fixed>
		<fixed class="a_mimo" name="a_hip_lean" limited="true" range="-.01 .01">
			<joint joint="robot:a_hip_lean1" coef="1"/>
			<joint joint="robot:a_hip_lean2" coef="-.5"/>
		</fixed>

		<fixed class="a_mimo" name="a_head_limits1" limited="true" range="-2.1 2.1">
			<joint joint="robot:a_head_swivel" coef="1"/>
			<joint joint="robot:a_head_tilt_side" coef="1"/>
		</fixed>
		<fixed class="a_mimo" name="a_head_limits2" limited="true" range="-2.1 2.1">
			<joint joint="robot:a_head_tilt" coef="1"/>
			<joint joint="robot:a_head_tilt_side" coef="1"/>
		</fixed>
		<fixed class="a_mimo" name="a_head_limits3" limited="true" range="-2.1 2.1">
			<joint joint="robot:a_head_swivel" coef="1"/>
			<joint joint="robot:a_head_tilt" coef="1"/>
		</fixed>
		<fixed class="a_mimo" name="a_head_limits1_sym" limited="true" range="-2.1 2.1">
			<joint joint="robot:a_head_swivel" coef="1"/>
			<joint joint="robot:a_head_tilt_side" coef="-1"/>
		</fixed>
		<fixed class="a_mimo" name="a_head_limits2_sym" limited="true" range="-2.1 2.1">
			<joint joint="robot:a_head_tilt" coef="1"/>
			<joint joint="robot:a_head_tilt_side" coef="-1"/>
		</fixed>
		<fixed class="a_mimo" name="a_head_limits3_sym" limited="true" range="-2.1 2.1">
			<joint joint="robot:a_head_swivel" coef="1"/>
			<joint joint="robot:a_head_tilt" coef="-1"/>
		</fixed>
	</tendon>
	

	
</mujoco>
